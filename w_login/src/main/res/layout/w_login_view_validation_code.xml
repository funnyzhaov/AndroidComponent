<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginStart="19dp"
        android:id="@+id/iv_back"
        android:background="@drawable/w_login_back_icon"
        android:layout_width="9dp"
        android:layout_height="17dp" />
    <TextView
        android:id="@+id/tv_code_page_tips"
        android:layout_below="@+id/iv_back"
        android:layout_marginTop="51dp"
        android:layout_marginStart="25dp"
        android:textSize="18sp"
        android:textColor="#231815"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_input_phone"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignStart="@+id/v_line_1"
        android:layout_below="@+id/tv_code_page_tips"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/transparent"
        android:digits="1234567890"
        android:hint="@string/w_login_input_phone"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHint="#b7b7b7"
        android:textSize="14sp" />
    <View
        android:id="@+id/v_line_1"
        android:layout_below="@+id/et_input_phone"
        android:background="#dddddd"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_input_code"
        android:layout_below="@+id/v_line_1"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="6"
        android:hint="@string/w_login_input_code"
        android:textSize="14sp"
        android:textColorHint="#b7b7b7"
        android:background="@android:color/transparent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:layout_width="248dp"
        android:layout_height="18dp" />
    <TextView
        android:id="@+id/tv_get_code"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/et_input_code"
        android:layout_below="@+id/v_line_1"
        android:textColor="#4da6ff"
        android:textSize="12sp"
        android:text="获取验证码"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/v_line_2"
        android:layout_below="@id/et_input_code"
        android:background="#dddddd"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_below="@id/v_line_2"
        android:textColor="#b7b7b7"
        android:textSize="16sp"
        android:gravity="center"
        android:text="下一步"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/w_login_login_btn_normal"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="325dp"
        android:layout_height="45dp" />
</RelativeLayout>
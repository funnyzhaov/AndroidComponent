<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.xuexibaoapp.educhain.w_login.LoginActivity">


    <TextView
        android:id="@+id/tv_login_tips"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:textColor="#231815"
        android:text="@string/w_login_login_tips"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_input_phone"
        android:layout_below="@+id/tv_login_tips"
        android:inputType="phone"
        android:digits="1234567890"
        android:maxLength="11"
        android:hint="@string/w_login_input_phone"
        android:textSize="14sp"
        android:textColorHint="#b7b7b7"
        android:background="@android:color/transparent"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="18dp" />
    <View
        android:id="@+id/v_line_1"
        android:layout_below="@+id/et_input_phone"
        android:background="#dddddd"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_input_password"
        android:layout_below="@+id/v_line_1"
        android:inputType="textPassword"
        android:hint="@string/w_login_input_password"
        android:textSize="14sp"
        android:textColorHint="#b7b7b7"
        android:background="@android:color/transparent"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="18dp" />
    <View
        android:id="@+id/v_line_2"
        android:layout_below="@id/et_input_password"
        android:background="#dddddd"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/v_line_2"
        android:textColor="#b7b7b7"
        android:textSize="16sp"
        android:gravity="center"
        android:text="登录"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/w_login_login_btn_normal"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="325dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_below="@id/btn_login"
        android:textColor="#ffcb00"
        android:text="忘记密码"
        android:textSize="12sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_below="@id/btn_login"
        android:textColor="#231815"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="注册"
        android:textSize="12sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
